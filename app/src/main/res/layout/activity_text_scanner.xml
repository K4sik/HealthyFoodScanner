    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.home.scanner.TextScannerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    <ScrollView-->
